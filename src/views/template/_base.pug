doctype html
html(lang="en")
	head
		title= pageTitle
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="./css/combined.css")
		link( href="https://fonts.googleapis.com/css?family=Ubuntu+Condensed|Ubuntu:300,300i,400,400i,500,500i,700,700i&amp;subset=cyrillic-ext",
			rel="stylesheet"
		)
		link(rel="stylesheet", href="./css/style.css")
		block styles-link

	body
		.page-wrap
			block header-block
				include ../blocks/header-block.pug

			block content
		block footer-block
			include ../blocks/footer-block.pug
		script(src="./js/combined.js")
		script(src="./js/script.js")
		block script

